<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.prova.myapplication2.progetto_mk2.app.DriveActivity$PlaceholderFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <com.prova.myapplication2.progetto_mk2.app.VerticalSeekBar

            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/seekBarLimiterVel"
            android:max="100"
            android:progress="50"
            android:indeterminate="false" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"

            android:weightSum="1">


            <Button
                android:layout_width="120dp"
                android:layout_height="95dp"
                android:text="-------&gt;"
                android:id="@+id/buttonUP"
                android:layout_weight="0.51"
                android:rotation="270" />

            <Button
                android:layout_width="120dp"
                android:layout_height="95dp"
                android:text="&lt;-------"
                android:id="@+id/buttonDOWN"
                android:layout_weight="0.51"
                android:rotation="270" />
        </LinearLayout>


    </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="VelocitÃ : 50"
            android:id="@+id/textViewLimiterSpeed"
            android:gravity="center"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <SeekBar

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarLimiterSterzo"
            android:max="100"
            android:progress="50"
            android:indeterminate="false"
            android:layout_gravity="bottom" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:id="@+id/buttonLeft"
                android:layout_gravity="center_horizontal"
                android:text=" &lt;----" />

            <Button
                android:layout_width="98dp"
                android:layout_height="90dp"
                android:text="----&gt;"
                android:id="@+id/buttonRight"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sterzo: 50"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/textViewLimiterSterzo" />
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:weightSum="1"
        android:gravity="left">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textTasti"
            android:layout_gravity=""
            android:id="@+id/linearLayoute"
            android:weightSum="1">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView

                    android:id="@+id/textTasti"
                    android:layout_width="85dp"
                    android:layout_height="142dp"
                    android:text="CMD inviato"

                    android:singleLine="false"
                    android:gravity="clip_vertical"
                    android:textSize="25sp"
                    android:layout_toRightOf="@+id/linearLayoute"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="0.26" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
